{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "go: build",
      "type": "shell",
      "command": "go",
      "args": ["build", "-v", "./..."],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "go: run with env",
      "type": "shell",
      "command": "go",
      "args": ["run", "main.go"],
      "group": "build",
      "options": {
        "env": {
          "WEB_API_ENDPOINT": "https://httpbin.org/post",
          "TCP_PORT": "8080",
          "METRICS_PORT": "9090",
          "WEB_API_AUTH_TOKEN": "",
          "MAX_CONNECTIONS": "100",
          "CONNECTION_TIMEOUT": "30"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "go: test",
      "type": "shell",
      "command": "go",
      "args": ["test", "-v", "./..."],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$go"]
    }
  ]
}
